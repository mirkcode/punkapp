<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/primary_radius_bg"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/horizontal_page_margin"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="@dimen/horizontal_page_margin"
        android:paddingEnd="@dimen/horizontal_page_margin"
        android:background="@drawable/accent_top_radius"
        android:id="@+id/hopName_txt"
        style="@style/TextView.Bold"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Amarillo" />
    <TextView
        android:paddingStart="@dimen/horizontal_page_margin"
        android:paddingEnd="@dimen/horizontal_page_margin"
        android:layout_marginTop="5dp"
        android:id="@+id/hopAdd_txt"
        style="@style/TextView"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Add: start" />
    <TextView
        android:paddingStart="@dimen/horizontal_page_margin"
        android:paddingEnd="@dimen/horizontal_page_margin"
        android:id="@+id/hopAmount_txt"
        style="@style/TextView"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Amount: 14 kg" />
    <TextView
        android:paddingStart="@dimen/horizontal_page_margin"
        android:paddingEnd="@dimen/horizontal_page_margin"
        android:id="@+id/hopAttribute_txt"
        style="@style/TextView"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Attribute: bitter" />
</LinearLayout>