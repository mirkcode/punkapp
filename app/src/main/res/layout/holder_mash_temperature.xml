<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingStart="@dimen/horizontal_page_margin"
    android:paddingEnd="@dimen/horizontal_page_margin"
    android:layout_marginStart="@dimen/horizontal_page_margin"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center"
    android:background="@drawable/accent_radius_bg"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/temperature_txt"
        style="@style/TextView.Bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Temp: 19 celsius" />
    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/duration_txt"
        style="@style/TextView.Light"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Duration: 89" />
</LinearLayout>